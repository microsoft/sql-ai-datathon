{
  "name": "SQL + AI Datathon",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0"
    }
  },
  "forwardPorts": [
    8000,
    5000,
    5001,
    1433
  ],
  
  // Preserve SQL Server data between rebuilds
  "mounts": [
    "source=sqlserver-data,target=/var/opt/mssql,type=volume"
  ],
  
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -r missions/mission3/py/requirements.txt && pip install -r missions/mission4/py/requirements.txt && dotnet tool install -g Microsoft.DataApiBuilder || true && .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}