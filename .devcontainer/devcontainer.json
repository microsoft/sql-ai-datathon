{
  "name": "SQL + AI Datathon",
  "service": "app",
  "workspaceFolder": "/workspaces/sql-ai-datathon",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0"
    }
  },
  "forwardPorts": [
    8000,
    5000,
    5001,
    1433
  ],
  
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -r missions/mission3/py/requirements.txt && pip install -r missions/mission4/py/requirements.txt && dotnet tool install -g Microsoft.DataApiBuilder || true" ,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}