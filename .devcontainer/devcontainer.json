{
  "name": "SQL + AI Datathon",
  "image": "ghcr.io/azure-samples/python-ms-sql-devcontainer/python-mssql:1.0.0",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0"
    }
  },
  "forwardPorts": [
    8000,
    5000,
    5001
  ],
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -r missions/mission3/py/requirements.txt && pip install -r missions/mission4/py/requirements.txt && dotnet tool install -g Microsoft.DataApiBuilder || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}